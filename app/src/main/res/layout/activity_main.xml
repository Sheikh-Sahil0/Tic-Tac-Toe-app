<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/playerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Player Details"
        android:background="@color/black"
        app:titleTextColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/playerToolbar"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#D5FFFC">

        <EditText
            android:id="@+id/edtPlayerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:hint="Enter the name of player 1"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:inputType="text"/>

        <EditText
            android:id="@+id/edtPlayerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:ems="12"
            android:hint="Enter the name of player 2"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:inputType="text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>

</RelativeLayout>